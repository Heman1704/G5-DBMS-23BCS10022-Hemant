#G5_23BCS10022_Hemant_Session6
WITH user_rating_count AS (
    SELECT 
        u.name,
        COUNT(mr.movie_id) AS num_movies
    FROM Users u
    JOIN MovieRating mr ON u.user_id = mr.user_id
    GROUP BY u.user_id, u.name
),
max_user AS (
    SELECT name
    FROM user_rating_count
    WHERE num_movies = (SELECT MAX(num_movies) FROM user_rating_count)
    ORDER BY name
    LIMIT 1
),
movie_avg_feb AS (
    SELECT 
        m.title,
        AVG(mr.rating) AS avg_rating
    FROM Movies m
    JOIN MovieRating mr ON m.movie_id = mr.movie_id
    WHERE mr.created_at >= '2020-02-01' AND mr.created_at < '2020-03-01'
    GROUP BY m.movie_id, m.title
),
max_movie AS (
    SELECT title
    FROM movie_avg_feb
    WHERE avg_rating = (SELECT MAX(avg_rating) FROM movie_avg_feb)
    ORDER BY title
    LIMIT 1
)
SELECT name AS results FROM max_user
UNION ALL
SELECT title AS results FROM max_movie;
